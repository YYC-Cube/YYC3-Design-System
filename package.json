{
  "name": "yyc3-design-system",
  "version": "2.0.0",
  "description": "YYC³ Design System — Five-High/Five-Standard/Five-Implementation framework with 3 switchable themes",
  "type": "module",
  "private": true,
  "author": "YYC³ Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:tokens": "node ./scripts/build-tokens.js",
    "watch:tokens": "node ./scripts/watch-tokens.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:a11y": "jest --testPathPattern=a11y",
    "test:oklch": "node scripts/test-oklch-to-hex.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:perf": "tsx scripts/perf-test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate:tokens": "tsx scripts/validate-tokens.ts",
    "validate:locales": "tsx src/utils/locale-validation.ts",
    "validate:types": "tsx scripts/verify-types.ts",
    "precommit": "node scripts/precommit-check.cjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "qa": "pnpm typecheck && pnpm lint && pnpm validate:locales && pnpm test -- --coverage && pnpm test:e2e"
  },
