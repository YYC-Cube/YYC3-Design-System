{
  "name": "yyc3-design-system",
  "version": "1.3.0",
  "description": "YYC3 设计系统 - 包含设计令牌、组件库和 Storybook 文档",
  "type": "module",
  "private": true,
  "author": "YYC³ Team",
  "license": "MIT",
  "scripts": {
    "build:tokens": "node ./scripts/build-tokens.js",
    "watch:tokens": "node ./scripts/watch-tokens.js",
    "test:oklch": "node ./scripts/test-oklch-to-hex.js",
    "report:oklch": "node ./scripts/generate-oklch-report.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "dev": "npm run storybook",
    "build": "npm run build:tokens && npm run build-storybook",
    "yyc3:check": "node ./src/cli.js check",
    "yyc3:analyze": "node ./src/cli.js analyze",
    "yyc3:best-practices": "node ./src/cli.js best-practices",
    "yyc3:generate-tokens": "node ./src/cli.js generate-tokens",
    "yyc3:recommend-colors": "node ./src/cli.js recommend-colors",
    "yyc3:audit": "node ./src/cli.js audit"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "commander": "^12.0.0",
    "dompurify": "^3.3.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-actions": "^7.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "chokidar": "^3.5.3",
    "chromatic": "^15.1.1",
    "culori": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "style-dictionary": "^3.0.0",
    "svelte": "^5.51.3",
    "tinycolor2": "^1.4.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue": "^3.5.28"
  },
  "keywords": [
    "yyc3",
    "design-system",
    "design-tokens",
    "storybook",
    "components"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
