{
  "name": "yyc3-design-system",
  "version": "1.4.0",
  "description": "YYC3 设计系统 - 包含设计令牌、组件库和 Storybook 文档",
  "type": "module",
  "private": true,
  "author": "YYC³ Team",
  "license": "MIT",
  "scripts": {
    "build:tokens": "node ./scripts/build-tokens.js",
    "watch:tokens": "node ./scripts/watch-tokens.js",
    "test:oklch": "node ./scripts/test-oklch-to-hex.js",
    "report:oklch": "node ./scripts/generate-oklch-report.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "benchmark": "node ./scripts/benchmark.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "npm run storybook",
    "build": "npm run build:tokens && npm run build-storybook",
    "yyc3:check": "node ./src/cli.js check",
    "yyc3:analyze": "node ./src/cli.js analyze",
    "yyc3:best-practices": "node ./src/cli.js best-practices",
    "yyc3:generate-tokens": "node ./src/cli.js generate-tokens",
    "yyc3:recommend-colors": "node ./src/cli.js recommend-colors",
    "yyc3:audit": "node ./src/cli.js audit"
